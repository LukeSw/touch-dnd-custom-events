  "description": "Intercepts touch events (`touchstart`, `touchmove`, `touchend`) on draggable html elements and generates custom drag and drop events instead",
  "main": "dist/index.js",
  "scripts": {
    "compile": "babel -d dist/ src/",
    "lint": "./node_modules/.bin/eslint ./src",
    "prepublish": "npm run compile",
    "test": "mocha --compilers js:babel/register --recursive",
    "test:watch": "npm run test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:Neilos/touch-dnd-custom-events.git"
  },
  "author": "Neil Atkinson (http://github.com/Neilos)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Neilos/touch-dnd-custom-events/issues"
  },
  "homepage": "https://github.com/Neilos/touch-dnd-custom-events#readme",
  "devDependencies": {
    "babel": "^5.8.23",
    "babel-loader": "^5.3.2",
    "eslint": "^3.8.1",
    "eslint-config-google": "^0.7.0",
    "eslint-plugin-mocha": "^4.7.0",
    "expect.js": "^0.3.1",
    "mocha": "^2.0.1",
    "sinon": "^1.17.6"
  },
  "dependencies": {},
  "peerDependencies": {}
}
